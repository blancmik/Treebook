<div class="page-header">
  <h2>All Statuses</h2> 
</div>

<%= link_to "Enter New Status", new_status_path, class: "btn btn-mini btn-primary" %>

<% @statuses.each do |status| %>

<div class="status">
    <strong><%= status.name %></strong>
    <p><%= status.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
       | <%= link_to 'Edit Status', edit_status_path(status) %> | 
      <%= link_to 'Delete Status', status, method: :delete, data: { confirm: 'Are you sure you want to delete this status?' } %>
      </span>
    </div>
</div>

<% end %>
